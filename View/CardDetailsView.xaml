<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YGOSearcher.View.CardDetailsView"
             Title="CardDetailsView">
    <Grid Padding="30" ColumnSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <VerticalStackLayout Grid.Column="0" Padding="30" Spacing="10">
            <Frame>
                <HorizontalStackLayout Spacing="5">
                    <Label Text="Card Name: " FontAttributes="Bold"/>
                    <Label Text="(placeholder) Kashtira Unicorn"/>
                </HorizontalStackLayout>
            </Frame>
            <Frame>
                <VerticalStackLayout>
                    <Label Text="Card Text: " FontAttributes="Bold"/>
                    <Label Text="(placeholder) If you control no monsters, you can Special Summon this card (from your hand). You can only use each of the following effects of &quot;Kashtira Unicorn&quot; once per turn. During your Main Phase: You can add 1 &quot;Kashtira&quot; Spell from your Deck to your hand. When this card declares an attack, or if your opponent activates a monster effect (except during the Damage Step): You can look at your opponent's Extra Deck, and if you do, banish 1 monster from it, face-down."/>
                </VerticalStackLayout>
            </Frame>
            <HorizontalStackLayout Grid.Column="0" Padding="10" Spacing="10">
                <Frame>
                    <HorizontalStackLayout Spacing="5">
                        <Label Text="Type: " FontAttributes="Bold"/>
                        <Label Text="Psychic/Effect (placeholder)"/>
                    </HorizontalStackLayout>
                </Frame>
                <Frame>
                    <HorizontalStackLayout Spacing="5">
                        <Label Text="Attribute: " FontAttributes="Bold"/>
                        <Label Text="Wind (placeholder)"/>
                    </HorizontalStackLayout>
                </Frame>
                <Frame>
                    <HorizontalStackLayout Spacing="5">
                        <Label Text="Level/Rank: " FontAttributes="Bold"/>
                        <Label Text="7"/>
                    </HorizontalStackLayout>
                </Frame>
            </HorizontalStackLayout>
            <HorizontalStackLayout Grid.Column="0" Padding="10" Spacing="10">
                <Frame>
                    <HorizontalStackLayout Spacing="5">
                        <Label Text="ATK: " FontAttributes="Bold"/>
                        <Label Text="2500 (placeholder)"/>
                    </HorizontalStackLayout>
                </Frame>
                <Frame>
                    <HorizontalStackLayout Spacing="5">
                        <Label Text="DEF: " FontAttributes="Bold"/>
                        <Label Text="2100 (placeholder)"/>
                    </HorizontalStackLayout>
                </Frame>
            </HorizontalStackLayout>

        </VerticalStackLayout>
        <Image Grid.Column="1" Grid.Row="0" Source="p_68304193.jpg"/>
    </Grid>

</ContentPage>